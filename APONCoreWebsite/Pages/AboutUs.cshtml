@page
@model APONCoreWebsite.Pages.AboutUsModel
@{
    ViewData["Title"] = "AboutUs";
}

<div class="row APONText">
    <div class="col-12">
        <span class="pageHeader">About Us</span>
    </div>
</div>
<div *ngIf="aboutUsData" class="APONText block">
    <div class="AboutUsHeader">
        <img class="AboutUsHeader__image u-margin-bottom-4"
             src="@Model.Info.AboutUsInfo.ImageURL" />
        <div class="AboutUsHeader__text">
            <p class="paragraph">@Html.Raw(Model.Info.AboutUsInfo.Text)</p>
        </div>
    </div>
</div>
<hr />
<div *ngIf="crewList">

    @{
        for (int i = 0; i < Model.Info.CrewMembers.Count; i++)
        {
            if (i % 4 == 0)
            {
                <div class="grid-row APONText">
                    @if (Model.Info.CrewMembers.Count > i)
                    {<div class="col-1-of-4">
                            <partial name="_CrewMemberCard" model=@Model.Info.CrewMembers[i] />
                        </div>
                    }
                    @if (Model.Info.CrewMembers.Count > i + 1)
                    {<div class="col-1-of-4">
                            <partial name="_CrewMemberCard" model=@Model.Info.CrewMembers[i + 1] />
                        </div>
                    }
                    @if (Model.Info.CrewMembers.Count > i + 2)
                    {<div class="col-1-of-4">
                            <partial name="_CrewMemberCard" model=@Model.Info.CrewMembers[i + 2] />
                        </div>
                    }
                    @if (Model.Info.CrewMembers.Count > i + 3)
                    {<div class="col-1-of-4">
                            <partial name="_CrewMemberCard" model=@Model.Info.CrewMembers[i + 3] />
                        </div>
                    }
                </div>

            }
        }
    }

</div>



