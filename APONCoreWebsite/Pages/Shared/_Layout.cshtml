@model ViewModels.ViewModelBase

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - All Ports Open</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/styles.css" />
    <script async
            src="https://platform.twitter.com/widgets.js"
            charset="utf-8"></script>


    <link rel="stylesheet"
          type="text/css"
          href="//fonts.googleapis.com/css?family=Lato:300,400,500,700,900" />
    <partial name="_metaTags" model=@Model.MetaTagsModel />
</head>
<body>
    <button class="continue" type="button">spiderman</button>
    <div class="page-container">
        <header>

            <div>
                <div class="top-bar fixed-top">
                    <div class="logo-box">
                        <a asp-page="/Index">
                            <img class="SiteLogo"
                                 alt="All Ports Open Network Logo"
                                 src="https://media.allportsopen.org/Images/LogoSmWText.png" />
                        </a>
                    </div>
                </div>

            </div>
            @await Component.InvokeAsync("nav")

            @await Component.InvokeAsync("auth")





            <div class="social-media-bar-box">
                <div class="small-grid-row">
                    <div class="col-1-of-4-small">
                        <a href="https://twitter.com/allportsopen" target="_blank">
                            <img class="socialMediaIcon"
                                 src="https://media.allportsopen.org/images/siteimages/TwitterWB.png" />
                        </a>
                    </div>
                    <div class="col-1-of-4-small">
                        <a href="https://www.facebook.com/AllPortsOpenNetwork/"
                           target="_blank">
                            <img class="socialMediaIcon"
                                 src="https://facebookbrand.com/wp-content/uploads/2019/04/f_logo_RGB-Hex-Blue_512.png?w=512&h=512" />
                        </a>
                    </div>
                    <div class="col-1-of-4-small">
                        <a href="https://discord.gg/pQSgzuY" target="_blank">
                            <img class="socialMediaIcon"
                                 src="https://discord.com/assets/2c21aeda16de354ba5334551a883b481.png" />
                        </a>
                    </div>
                    <div class="col-1-of-4-small">
                        <a href="https://www.instagram.com/allportsopen/" target="_blank">
                            <img class="socialMediaIcon"
                                 src="https://media.allportsopen.org/images/siteimages/InstaColor.png" />
                        </a>
                    </div>
                </div>
            </div>
        </header>
        <main>
            <div class="center-main-box">
                <div class="outlet">
                    <main role="main" style="overflow: scroll">

                        @RenderBody()
                    </main>

                </div>
                <div class="new-bottom-bar">
                    <div class="theme-button-box">
                        <button class="APONbtn APONbtnBlue">
                            Change Theme
                        </button>
                        <button class="APONbtn APONbtnOrange"
                                (click)="saveTheme()">
                            <img class="saveIcon"
                                 src="https://media.allportsopen.org/images/siteimages/saveicon.png" />
                        </button>
                    </div>
                    <div class="name-bar">
                        <span class="site-name-top">The All Ports Open Network</span>
                        <span class="site-name-bottom">Take Play Seriously</span>

                    </div>
                    <div class="copyright">
                        &copy; 2020 The All Ports Open Network

                    </div>
                </div>
            </div>
            <input type="hidden" id="copyToClipText" />

            <div *ngIf="showRightAd" class="right-general-box">
                <app-advertisement [Location]="1"></app-advertisement>
            </div>
        </main>
        @*<div *ngIf="showTopAd" class="ad-bar">
                <app-ad-horizontal [Delay]="0" [Location]="2"></app-ad-horizontal>
            </div>*@




        <form method="post" id="layoutJWTForm" data-ajax="true" data-ajax-method="POST" data-ajax-url="\AutoLogin" data-ajax-confirm="Are you sure?">
            <input type="hidden" id="layoutJWT" name="layoutJWT" value="test" />
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/ts/TSMain.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.unobtrusive-ajax/3.2.5/jquery.unobtrusive-ajax.js"></script>
    <script src="https://cdn.tiny.cloud/1/ujgllac16mc23ozg3ajgb2k8aylj36wgpjbmx5bgeycpnofe/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>

